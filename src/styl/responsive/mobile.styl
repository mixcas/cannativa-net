$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 12px
$font-size-extra = 48px
$font-size-large = 36px
$font-size-mid = 24px
$font-size-small = 18px
$font-size-tiny = 8px

grid-maker(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)


// NOTE: This will move to desktop or something
#header
  background: $color-green

.logo-container
  display: flex
  height: 2.2rem

  svg path
    fill: $color-black !important

  svg:first-child
    height: 100%
    margin-right: 0.5rem

  svg:last-child
    height: 36%

.desktop-nav-right
  display: flex
  align-items: center

.desktop-menu-link
  ul
    display: flex

  li
    padding: 0 0.4rem
    border-right: 3px solid
  li:last-child
    border-right: none

// --------------------- Single
.single
  .header-image-holder
    position: relative

    &:after
      content: ''
      height: 100%
      width: 100%
      background-image: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(255,255,255,0) 100%)
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0

    .image-wrapper:before,
    .image-wrapper:after
      content: ''
      width: 100%
      height: 10px
      background-size: 50% 100%
      background-image: linear-gradient(90deg, rgba(186,216,162,1) 16.6666666667%, rgba(186,216,162,1) 16.6666666667%, rgba(243,202,200,1) 16.6666666668%, rgba(243,202,200,1) 33.3333333334%, rgba(230,90,65,1) 33.3333333334%, rgba(230,90,65,1) 50%, rgba(243,175,74,1) 50%, rgba(243,175,74,1) 66.6666666668%, rgba(63,106,88,1) 66.6666666668%, rgba(63,106,88,1) 83.3333333335%, rgba(122,176,157,1) 83.3333333336%, rgba(122,176,157,1) 100%)
      display: block
      z-index: 101
      position: relative

  .title-holder
    position: absolute;
    bottom: 0
    z-index: 100
    width: 100%
    color: $color-white

  .single-content
    font-weight: light

    p
      @extend .margin-bottom-large


    a
      color: $color-red
      font-style: italic
      text-decoration: none
      font-weight: bold

  .tags-list
    list-style: none

    a
      color: $color-red

    li
      display: inline-block

      &:after
        content: '|'
        margin: 0 0.4rem
